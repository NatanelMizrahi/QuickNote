<!DOCTYPE html>
<html>
<%- include('includes/head') %>
<body>
<%- include('includes/nav') %>
<div class="container" style="padding-top:30px">

      <form id="login-form" method="post" action="/users/login" class="form-signin"> 
        <%- messages() %>
        <div style="text-align: center">
            <img class="profile-pic" src='http://philosophy.ucr.edu/wp-content/uploads/2014/10/no-profile-img-240x300.gif'>
        </div>
        <h2 class="form-signin-heading text-center">User Login</h2>
          <div class="input-group mb-2 mr-sm-2 mb-sm-0">
            <div class="input-group-addon"><div class="glyphicon glyphicon-user"></div></div>
            <input type="text" name="username" class="form-control" placeholder="Username or email" required autofocus>
          </div>
          <div class="input-group mb-2 mr-sm-2 mb-sm-0">
            <div class="input-group-addon"><div class="glyphicon glyphicon-lock"></div></div>
             <input type="password" name="password" class="form-control" placeholder="Password" required>
          </div>
          <p><a href="#" data-toggle="modal" data-target="#password-modal">Forgot password?</a></p>
        <button id="loginBtn" class="btn btn-lg btn-success btn-block" type="submit">Log in</button>
        <p class="text-center">or</p> 
        <button id="fbLogin" class="btn btn-lg btn-block" type="submit">
          <img src="/images/fb-icon.png" style="width:1.8em; margin-bottom:7px; vertical-align: middle;">
          &nbsp;Log in with Facebook
        </button>
        <br>
         <p>Not registered? <a href="#" data-toggle="modal" data-target="#signup-modal">Signup</a></p>
         <br>
         
      </form>

          <!--Forgot password Modal-->
    <div class="modal fade" id="password-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <span class="modal-title"><b>Restore Password</b></span>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <label>Type the email you registered with and click "Reset passsword" to get a password reset email</label>
            <form id="resetPassForm" method="post" action="/users/resetPassword" class="form-modal">

                <input type="email" name="email"  class="form-control" placeholder="Enter your email here" required>
                <br>
                <button type="submit" class="btn btn-primary btn-info">Reset Password</button>
            </form>
          </div>
        </div>
      </div>
    </div>
</div>




    <%- include('includes/scripts') %>
    <script>
      $(function(){
        $("#resetPassForm").submit(function(){
          //hide form and append loader
          $(this).hide();
          $("#password-modal .modal-body").append(
            "<h2 class='text-center'><b>Sending email...<b></h2>"
           +'<div class="loader text-center"></div>'
           );
        });

        $("#fbLogin").click(function(e){
          $("#login-form").attr("action", "/users/facebookLogin");
        });
         $("#loginBtn").click(function(e){
          $("#login-form").attr("action", "/users/login");
        });
      });
    </script>
</body>
</html>
